      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/baseline_jpeg"
        style="@style/drawee"
        />

      <TextView
        android:text="@string/label_baseline_jpeg"
        style="@style/label"
        />
    </FrameLayout>

