<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.facebook.fresco.samples.showcase.drawee.DraweeHierarchyFragment"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <Button
        android:id="@+id/load_success"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/drawee_hierarchy_load_success"
        />
    <Button
        android:id="@+id/load_fail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/drawee_hierarchy_load_fail"
        />
    <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/drawee_hierarchy_clear"
        />
  </LinearLayout>
  <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/switch_rounded"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/margin_medium"
      android:text="@string/drawee_hierarchy_switch_rounded"
      />
  <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/switch_ninepatch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/margin_medium"
      android:text="@string/drawee_hierarchy_switch_ninepatch"
      />
  <ImageView
      android:id="@+id/image"
      android:layout_width="match_parent"
      android:layout_height="@dimen/drawee_height_medium"
      android:layout_marginTop="@dimen/margin_medium"
      />
</LinearLayout>
