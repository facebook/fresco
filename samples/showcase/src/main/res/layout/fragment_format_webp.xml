<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      >

    <!-- static webp -->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawee_view_webp_static"
        android:layout_width="@dimen/drawee_width_medium"
        android:layout_height="@dimen/drawee_height_medium"
        android:layout_marginTop="@dimen/margin_medium"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/format_webp_static_help"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <!-- translucent webp -->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawee_view_webp_translucent"
        android:layout_width="@dimen/drawee_width_medium"
        android:layout_height="@dimen/drawee_height_medium"
        android:layout_marginTop="@dimen/margin_medium"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/format_switch_checker_board"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/format_webp_translucent_help"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <!-- animated webp -->

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawee_view_webp_animated"
        android:layout_width="@dimen/drawee_width_medium"
        android:layout_height="@dimen/drawee_height_medium"
        android:layout_marginTop="@dimen/margin_medium"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/format_webp_animated_help"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <!-- webp support status -->

    <TextView
        android:id="@+id/text_webp_support_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="monospace"
        android:textSize="8sp"
        />
  </LinearLayout>
</ScrollView>
