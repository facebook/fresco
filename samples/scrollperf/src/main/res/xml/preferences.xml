<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <PreferenceCategory
        android:key="key_preferences_source_group"
        android:title="@string/title_preferences_source_group"
        >
        <ListPreference
            android:defaultValue="@string/value_local_uri"
            android:dialogTitle="@string/dialog_title_data_source"
            android:entries="@array/data_source_labels"
            android:entryValues="@array/data_source_values"
            android:key="uris_data_source"
            android:title="@string/title_data_source"
            />
        <CheckBoxPreference
            android:key="infinite_data_source"
            android:title="@string/title_infinite_data_source"
            />
        <CheckBoxPreference
            android:key="distinct_uri_data_source"
            android:title="@string/title_distinct_uri_data_source"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="key_preferences_rounded_corners"
        android:title="@string/title_preferences_rounded_corners"
        >
        <CheckBoxPreference
            android:key="rounded_corners"
            android:title="@string/title_preferences_rounded_corners_enabled"
            />
        <CheckBoxPreference
            android:key="rounded_as_circle"
            android:title="@string/title_preferences_rounded_as_circle_enabled"
            app:dependency="rounded_corners"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="key_preferences_use_postprocessor"
        android:title="@string/title_preferences_postprocessor"
        >
        <CheckBoxPreference
            android:key="use_postprocessor"
            android:title="@string/title_preferences_use_postprocessor"
            />
        <ListPreference
            android:defaultValue="@string/value_postprocessor_medium"
            android:dependency="use_postprocessor"
            android:dialogTitle="@string/dialog_title_use_postprocessor"
            android:entries="@array/postprocessor_labels"
            android:entryValues="@array/postprocessor_values"
            android:key="postprocessor_type"
            android:title="@string/title_preferences_postprocessor_type"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="key_preferences_controller_group"
        android:title="@string/title_controller_group"
        >
        <CheckBoxPreference
            android:key="reuse_old_controller"
            android:title="@string/title_reuse_old_controller"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="key_preferences_resize_group"
        android:title="@string/title_preferences_resize_group"
        >
      <CheckBoxPreference
          android:key="downsampling"
          android:title="@string/title_downsampling"
      />
      <CheckBoxPreference
          android:key="auto_size_override"
          android:title="@string/title_auto_size_override"
      />
      <com.facebook.samples.scrollperf.preferences.SizePreferences
          android:title="@string/title_overriden_size_width"
          android:defaultValue="65"
          android:dependency="auto_size_override"
          android:key="width_size_key"
      />
      <com.facebook.samples.scrollperf.preferences.SizePreferences
          android:title="@string/title_overriden_size_height"
          android:defaultValue="@integer/default_size_value"
          android:dependency="auto_size_override"
          android:key="height_size_key"
      />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="key_preferences_scale_type_group"
        android:title="@string/title_preferences_drawee_group"
        >
        <ListPreference
            android:defaultValue="@string/value_scale_type_fit_center"
            android:dialogTitle="@string/title_preferences_scale_type"
            android:entries="@array/scale_type_labels"
            android:entryValues="@array/scale_type_values"
            android:key="scale_type"
            android:title="@string/title_preferences_scale_type"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="key_preferences_recycler_layout"
        android:title="@string/title_preferences_recycler_layout"
        >
        <ListPreference
            android:defaultValue="@string/value_recyclerview_recycler_layout"
            android:dialogTitle="@string/dialog_title_recycler_layout"
            android:entries="@array/recycler_layout_labels"
            android:entryValues="@array/recycler_layout_values"
            android:key="recycler_layout"
            android:title="@string/title_recycler_layout"
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="key_preferences_various_group"
        android:title="@string/title_other_group"
        >
        <CheckBoxPreference
            android:key="auto_rotate"
            android:title="@string/title_auto_rotate"
            />
        <ListPreference
            android:defaultValue="@string/value_no_rotation"
            android:dialogTitle="@string/title_forced_rotation"
            android:entries="@array/rotation_angle_values"
            android:entryValues="@array/rotation_angle_values"
            android:key="rotation_angle"
            android:title="@string/title_forced_rotation"
        />
    </PreferenceCategory>
</PreferenceScreen>
